<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idoston.self_study.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_first">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/idoston"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textAppearance="?android:textAppearanceLarge"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_second"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_below="@+id/linear_first"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/movingCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera" />

            <Button
                android:id="@+id/movingSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Seek Bar" />
            <Button
                android:id="@+id/movingListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option"
                android:onClick="moveOption" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_second"
            android:layout_centerHorizontal="true"
            android:id="@+id/linear_third"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10sp">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toggle"
                android:onClick="moveToggle"
                />
            <Button
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit" />
            <Button
                android:id="@+id/movingCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckBox"
                android:onClick="moveCheckBox"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pop Up"
                android:onClick="movePopUp"/>

        </LinearLayout>



</RelativeLayout>
