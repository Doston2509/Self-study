<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idoston.self_study">
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TakeCamera"
            android:label="Camera"
            android:parentActivityName=".MainActivity">
            <intent-filparenter>
                <action android:name="com.idoston.self_study.TakeCamera" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filparenter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".SeekingBar"
            android:label="Seek Bar"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.idoston.self_study.SeekingBar" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.idoston.self_study.ListViewing"
            android:label="ListView"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.idoston.self_study.ListViewing" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>